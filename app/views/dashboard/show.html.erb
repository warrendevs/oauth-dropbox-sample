<!-- <div class="row hidden"> -->
<div class="row">
      <div class="dual-list list-left col-sm-5">
          <!-- <div class="well text-right"> -->
          <div class="well">
              <div class="row">
                  <div class="col-sm-10">
                      <p>Dropbox Files</p>
                  </div>
              </div>
              <ul class="list-group">
                <% if @files.empty? %>
                  <li class="list-group-item">No Files Found</li>
                <% else %>
                  <% @files.each do |file| %>
                    <li class="list-group-item"><%= file.path %></li>
                  <% end %>
                <% end %>

                  <!-- <li class="list-group-item">resume.pdf</li>
                  <li class="list-group-item">sample_work.pdf</li>
                  <li class="list-group-item">referrals.pdf</li>
                  <li class="list-group-item">headshot.jpg</li> -->
              </ul>
          </div>
      </div>

      <div class="list-arrows col-sm-1 text-center">
          <button class="btn btn-default btn-sm move-left">
              <span class="glyphicon glyphicon-chevron-left"></span>
          </button>

          <button class="btn btn-default btn-sm move-right">
              <span class="glyphicon glyphicon-chevron-right"></span>
          </button>
      </div>

      <div class="dual-list list-right col-sm-5">
          <div class="well">
              <div class="row">
                  <div class="col-sm-10">
                      <p>Your Folder Files</p>
                  </div>
              </div>
              <ul class="list-group">
                  <li class="list-group-item">none</li>
              </ul>
          </div>
      </div>

</div>
